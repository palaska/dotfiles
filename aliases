alias workspace="cd ~/Documents/workspace/"
alias vim='mvim -v'
alias ql='qlmanage -p 2>/dev/null'

alias git=hub
alias gac='git add --all && git commit -m $1'
alias gpom='git push origin master'
alias gpod='git push origin development'
alias gpo='git push origin $1'
alias gc='git checkout $1'
alias fixgitig='git rm -r --cached . && git add . && git commit -m "fixed untracked files"'

alias mfgac='git add --all && git cz'
alias mfgpod='git push origin development'
alias mfgpom='npm run release && git push --follow-tags origin master'

alias deploy='grunt build && grunt buildcontrol:heroku'

alias dockerclear='docker rm $(docker ps -a -q) && docker rmi $(docker images -q)'

